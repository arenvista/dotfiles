font_family JetBrainsMono Nerd Font
background_opacity 0.5
font_size        12.0
bold_font        auto
italic_font      auto
bold_italic_font auto

map ctrl+j kitten pass_keys.py bottom ctrl+j
map ctrl+k kitten pass_keys.py top    ctrl+k
map ctrl+h kitten pass_keys.py left   ctrl+h
map ctrl+l kitten pass_keys.py right  ctrl+l

enabled_layouts grid

# Bind Ctrl + | to create a vertical split
map ctrl+\ launch --location=hsplit --cwd=current

# Bind Ctrl + _ to create a horizontal split
map ctrl+- launch --location=vsplit --cwd=current

map alt+k move_window up
map alt+h move_window left
map alt+l move_window right
map alt+j move_window down



# BEGIN_KITTY_THEME
# Catppuccin-Mocha
include current-theme.conf
# END_KITTY_THEME
